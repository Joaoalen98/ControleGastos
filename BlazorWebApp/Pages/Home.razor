@page "/home"

@attribute [Authorize]

<MudContainer Class="mt-3">
    <h3>Seu Dashboard</h3>

    <div class="row">
        <div class="card col-md-6">
            <div class="card-header">
                Sua Receita
                <i class="bi bi-arrow-up-circle-fill text-success"></i>
            </div>
            <div class="card-body">
                <h5 class="card-title">R$ 0,00</h5>
                <MudButton href="/transacoes/receitas" Variant="Variant.Filled" Color="Color.Success">
                    Ver Receitas
                </MudButton>
            </div>
        </div>

        <div class="card col-md-6">
            <div class="card-header">
                Despesas
                <i class="bi bi-arrow-down-circle-fill text-danger"></i>
            </div>
            <div class="card-body">
                <h5 class="card-title">R$ 0,00</h5>
                <MudButton Href="/transacoes/despesas" Variant="Variant.Filled" Color="Color.Error">
                    Ver Despesas
                </MudButton>
            </div>
        </div>
    </div>
</MudContainer>

